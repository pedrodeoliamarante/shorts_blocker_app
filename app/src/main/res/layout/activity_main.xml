<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/infoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ShortsBlocker uses Accessibility to detect and block YouTube Shorts and Instagram Reels. To activate it, tap the button below and enable the service."
        android:textSize="16sp" />

    <Button
        android:id="@+id/openAccessibilityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Open Accessibility Settings" />

</LinearLayout>
